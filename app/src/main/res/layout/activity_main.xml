<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/home_screen_v2"
    tools:context=".MainActivity">


    <ImageButton
        android:id="@+id/capture_btn"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="359dp"
        android:background="#00000000"
        android:contentDescription="Scan Button"
        android:scaleType="fitCenter"
        android:src="@drawable/button_scan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/place_btn"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="420dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="359dp"
        android:background="#00000000"
        android:contentDescription="Place Button"
        android:scaleType="fitCenter"
        android:src="@drawable/button_place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/howto_btn"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="359dp"
        android:background="#00000000"
        android:contentDescription="howto Button"
        android:scaleType="fitCenter"
        android:src="@drawable/button_howto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
